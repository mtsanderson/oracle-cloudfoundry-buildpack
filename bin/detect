#!/usr/bin/env bash

BUILD_DIR=$1

if [ ! -f $BUILD_DIR/.oracle ]; then
    echo "Application not configured to use Oracle. Exiting!"
    exit 1
fi

if [ ! -f $BUILD_DIR/apt.yml ]; then
    echo "Application not configured to use cloudfoundry/apt-buildpack"
    echo "Use cloudfoundry/apt-buildpack to install libaio"
    exit 1
fi

exit 0
